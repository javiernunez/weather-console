<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        processIsolation="false"
        bootstrap="vendor/autoload.php"
        colors = "true"
        verbose="true"
        stopOnFailure="true"
>
    <testsuites>
        <testsuite name="all">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing" force="true"/>
        <env name="LOCALIZATION_HIDE_DEFAULT_LOCALE" value="true"/>
    </php>
</phpunit>
